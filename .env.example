# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-12345678901234567890
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,yourdomain.com,*.yourdomain.com
DJANGO_SETTINGS_MODULE=cloud_storage.settings

# MySQL Database Configuration
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=cloud_storage_db
MYSQL_USER=cloud_storage_user
MYSQL_PASSWORD=cloud_storage_secure_password_123
MYSQL_ROOT_PASSWORD=cloud_storage_secure_password_123

# Security Settings (HTTP mode - set to True for production with HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Optional: AWS S3 Configuration (uncomment if needed)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# For production deployment:
# 1. Generate a new SECRET_KEY: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# 2. Update ALLOWED_HOSTS with your domain
# 3. Change MYSQL_PASSWORD and MYSQL_ROOT_PASSWORD to strong passwords
# 4. For HTTPS: set SECURE_SSL_REDIRECT=True and configure SSL certificates
